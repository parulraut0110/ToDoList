{
  "manifest_version": 3,
  "name": "Simple To-Do List",
  "version": "1.0",
  "description": "A simple to-do list extension",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Simple To-Do List"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

  